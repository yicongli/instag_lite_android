<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unimelb.instagramlite">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.unimelb.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.unimelb.activity.Login"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.unimelb.activity.ShareActivity"
            android:label="@string/title_activity_share" />
        <activity android:name="com.unimelb.activity.SearchActivity" />
        <activity
            android:name="com.unimelb.activity.RegisterActivity"
            android:parentActivityName="com.unimelb.activity.Login"/>
        <activity
            android:name="com.unimelb.activity.WelcomeActivity"
            android:parentActivityName="com.unimelb.activity.RegisterActivity"/>
    </application>

</manifest>