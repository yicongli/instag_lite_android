<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_list_item"
    android:padding="10dp"
    android:layout_gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:layout_weight="0"
        android:id="@+id/search_list_item_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_avatar"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/search_list_item_title"
            android:layout_width="wrap_content"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/search_list_item_subtitle"
            android:layout_width="wrap_content"
            android:textColor="#999"
            android:textSize="13sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/search_list_item_follow_btn"
        android:layout_weight="0"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:text="Follow"
        android:background="#2592fc"
        android:textColor="#fff"
        android:textSize="10sp"
        />

</LinearLayout>
