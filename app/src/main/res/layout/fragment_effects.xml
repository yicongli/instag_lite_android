<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/libraryRelaLayout1">

            <include layout="@layout/snippet_effect_toolbar" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#2e3032"
            android:layout_weight="0.7">
            <com.bm.library.PhotoView
                android:id="@+id/image_view"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F8F8F8"
            android:layout_weight="0.3"
            android:id="@+id/filter_panel">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F8F8F8"
            android:layout_weight="0.3"
            android:id="@+id/bright_panel">

            <SeekBar
                android:id="@+id/seekBar_bright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:max="60"
                android:progress="30" />

            <TextView
                android:id="@+id/textView_bright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBar_bright"
                android:layout_centerHorizontal="true"
                android:text="@string/string_brightness_0"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#F8F8F8"
            android:layout_weight="0.3"
            android:id="@+id/contrast_panel">

            <SeekBar
                android:id="@+id/seekBar_contrast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:max="20"
                android:progress="10" />

            <TextView
                android:id="@+id/textView_contrast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBar_contrast"
                android:layout_centerHorizontal="true"
                android:text="@string/string_constrast_1_0"
                android:textSize="20sp"
                android:layout_marginTop="20dp" />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>