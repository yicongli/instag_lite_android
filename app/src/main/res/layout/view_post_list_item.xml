<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/post_list_item"
    android:padding="10dp">

    <ImageView
        android:id="@+id/post_list_item_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_avatar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_list_item_username"
            android:layout_width="wrap_content"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/post_list_item_location"
            android:layout_width="wrap_content"
            android:textColor="#999"
            android:textSize="13sp"
            android:layout_height="wrap_content"/>


        <com.unimelb.utils.SquareImageView
            android:id="@+id/postImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/post_list_item_date"
            android:layout_width="wrap_content"
            android:textColor="#999"
            android:textSize="13sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/post_list_item_like"
            android:layout_width="wrap_content"
            android:textColor="#222"
            android:textSize="13sp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/post_list_item_likebutton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:onClick="btnLikeOnClick"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/post_comments_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>