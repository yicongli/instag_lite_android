<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unimelb.activity.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/main_logo"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="instagram"
            android:textSize="72sp"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:fontFamily="cursive"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            />
        <EditText
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Phone/Email/User Name"
            android:id="@+id/userName_EditText"
            />
        <EditText
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword"
            android:id="@+id/password_EditText"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember my password"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:id="@+id/remember_pas_CheckBox"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto login next time"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/remember_pas_CheckBox"
                android:layout_alignLeft="@id/remember_pas_CheckBox"
                android:id="@+id/auto_login_CheckBox"
                />

        </RelativeLayout>

        <Button
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="Login"
            android:id="@+id/login_Button"
            />
        <RelativeLayout
            android:layout_marginVertical="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't you have an account?"
                android:id="@+id/registerGuide_TextView"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/register_TextView"
                android:textColor="@color/colorPrimary"
                android:clickable="true"
                android:layout_toRightOf="@id/registerGuide_TextView"
                android:onClick="goToRegister"/>



        </RelativeLayout>



    </LinearLayout>
</ScrollView>